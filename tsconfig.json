{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "allowJs": false,
    "outDir": "./lib",
    "baseUrl": ".",
    "rootDir": "./src",
    "lib": [
      "es2015",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "node_modules/*",
    "scripts/*"
  ]
}
